<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.oic.bookreminder"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="bottom">
    <com.oic.bookreminder.common.views.imageview.CircularImageView2
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/ic_avatar_circle"
        android:src="@drawable/ic_test_avatar"
        app:border_width="0dp"
        app:border_color="#E5E5E5"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:minHeight="30dp"
        android:paddingLeft="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="10dp"
        android:layout_marginLeft="-10dp"
        android:background="@drawable/ic_bubble">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="#5288bd"
            android:textSize="15sp"
            android:text="07:02 22/5/2015"
            android:textStyle="bold"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:background="@null"
            android:text="Tôi phải đọc hết cuốn sách này trong hai tuần"/>
    </LinearLayout>
</LinearLayout>